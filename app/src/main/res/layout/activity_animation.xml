<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apppartner.androidtest.animation.AnimationActivity"
    tools:background="@color/background">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_app_partner_logo"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/fade_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fade_button_height"
        android:layout_marginBottom="@dimen/animation_margin"
        android:layout_marginRight="@dimen/animation_margin"
        android:layout_marginLeft="@dimen/animation_margin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="@string/fade_button"
        android:textColor="@color/button_text"
        android:background="@color/button_mango"
    />

</RelativeLayout>
